<?xml version="1.0"?>
<!-- Contains 2D map content, see reference.png for more details -->
<rect x="0" y="0" height="3000" width="2000">
	<!-- Will create a symmetry from the down part to the upper part-->
	<symmetry y="1500" source="down" target="up">
		<!-- Walls -->
		<obstacles>
			<rect x="1400" y="1500" width="200" height="40" symmetry="false" />
			<rect x="1543" y="450" width="57" height="778" />
		</obstacles>

		<!-- Movable objects bound to actions defined in "objects" folder -->
		<objects>
			<puck x="1800" y="834" color="green" />

			<!-- Pucks around zones-->
			<puck x="450" y="834" color="red" />
			<puck x="750" y="834" color="red" />
			<puck x="1050" y="834" color="green" />

			<!-- Pucks in distributors-->
			<offset x="1543" y="450">
				<dist_puck x="0" y="50" color="red" />
				<dist_puck x="0" y="150" color="green" />
				<dist_puck x="0" y="250" color="red" />
				<dist_puck x="0" y="350" color="blue" />
				<dist_puck x="0" y="450" color="red" />
				<dist_puck x="0" y="550" color="green" />
			</offset>

			<offset x="2000" y="75">
				<dist_puck x="0" y="50" color="blue" />
				<dist_puck x="0" y="150" color="green" />
				<dist_puck x="0" y="250" color="red" />
			</offset>

			<!-- Pucks in chaos zone -->
			<puck in="chaos" color="red" />
			<puck in="chaos" color="red" />
			<puck in="chaos" color="green" />
			<puck in="chaos" color="blue" />

			<!-- Puck in  -->
		</objects>

		<!-- Zones to put objects-->
		<zones>
			<rect name="balance" x="1590" y="1228" width="400" height="220">
			<circle name="chaos" x="1050" y="1000" radius="300" />

			<rect name="red" x="300" y="0" width="300" height="450" />
			<rect name="green" x="600" y="0" width="300" height="450" />
			<rect name="blue" x="900" y="0" width="300" height="450" />
		</zones>
	</symmetry>
</rect>