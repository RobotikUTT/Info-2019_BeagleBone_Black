<?xml version="1.0"?>
<group>
	<!-- Takes up to 3 pucks -->
	<pickup_puck>
		<arg name="puck_y">@puck_1_y</arg>
	</pickup_puck>

	<pickup_puck>
		<arg name="puck_y">@puck_2_y</arg>
	</pickup_puck>

	<pickup_puck>
		<arg name="puck_y">@puck_3_y</arg>
	</pickup_puck>

	<!-- Choose best action between 3 dropping sites -->
	<group type="best" fail="restart">
		<drop_zone />
		<drop_balance />
		<drop_accelerator />
	</group>
</group>