<?xml version="1.0"?>
<!-- Example action tree-->
<group type="ordered">
	<!-- Go out of the zone -->
	<reach native="true">
		<!-- margin of 180 mm + 10 mm -->
		<arg name="x">475</arg>
		<arg name="y">1400</arg>
	</reach>

	<!-- Go behind things -->
	<reach native="true">
		<!-- margin of 180 mm + 10 mm -->
		<arg name="x">1050</arg>
		<arg name="y">1400</arg>
	</reach>

	<!-- Go back home -->
	<reach native="true" points="9">
		<!-- margin of 180 mm + 10 mm -->
		<arg name="x">1050</arg>
		<arg name="y">400</arg>
	</reach>

	<!-- Get some distance -->
	<reach native="true">
		<arg name="x">1050</arg>
		<arg name="y">800</arg>
		<arg name="direction">0</arg>
	</reach>

	<reach native="true">
		<arg name="x">750</arg>
		<arg name="y">800</arg>
	</reach>

	<!-- Add another one-->
	<reach native="true" points="1">
		<arg name="x">750</arg>
		<arg name="y">400</arg>
	</reach>

	<!-- Take some more distance -->
	<reach native="true">
		<arg name="x">750</arg>
		<arg name="y">700</arg>
		<arg name="direction">0</arg>
	</reach>

	<reach native="true">
		<arg name="x">1320</arg>
		<arg name="y">700</arg>
	</reach>

	<reach native="true">
		<arg name="x">1320</arg>
		<arg name="y">250</arg>
	</reach>

	<reach native="true" points="12">
		<arg name="x">400</arg>
		<arg name="y">250</arg>
	</reach>
</group>