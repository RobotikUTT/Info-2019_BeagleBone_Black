<?xml version="1.0"?>
<!-- Take a puck in a distibutor -->
<group type="ordered" fail="restart">
	<!-- Move toward puck -->
	<reach native="true">
		<arg name="x">1500</arg>
		<arg name="y">@puck_y</arg>
		<arg name="direction">1</arg>

		<arg name="change_direction_up_side">true</arg>
	</reach>

	<!-- Retrieve -->
	<fetch_puck native="true" />
</group>